.buy-box{
	width: 100%;
	border-top: solid 1rpx #E1E1E1;
	margin-bottom: 130rpx;
}

.byu-img{
	height: 330rpx;
	width: 84%;
	margin:30rpx auto;
}
.byu-img image{
	height: 330rpx;
	width: 100%;
}

.explain{
	border: solid 1px #fff;
	width: 100%;
	height: 330rpx;
	background: #F4F4F4;
}
.explain-center{
	width: 100%;
	height: 86%;
	background: #fff;
	margin-top:3% ;
}

.explain-text1{
	font-size: 28rpx;
	font-weight: bolder;
	line-height: 80rpx;
	}
.explain-text2{
	line-height: 35rpx;
	margin-bottom: 16rpx;
}
.give-type{
	font-size: 28rpx;
	font-weight: bolder;
	line-height: 80rpx;
}

.give-img{
	width: 100%;
	height: 300rpx;
	margin-bottom: 30rpx;
	position: relative;
	overflow: hidden;
}
.give-img image{
	width: 100%;
	height: 300rpx;
}
.buy{
	width: 100%;
	height: 80rpx;
	border-top: solid 1rpx #F0F0F0;
	position: fixed;
	bottom: 0rpx;
	background: #fff;
}
.buy button{
	height: 64rpx;
	width:80% ;
	line-height: 70rpx;
	border-radius:40rpx ;
	background: #FF364E;
	color: #fff;
	font-size: 24rpx;
	margin-top: 10rpx;
}